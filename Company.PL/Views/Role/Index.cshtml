@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}
<br />
<a class="btn btn-info" asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>

<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Roles`s Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Id)</td>
                <td>@Html.DisplayNameFor(d=>d.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Roles</h3>
    </div>
}



