@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}
<br />

<div class="m-2">
    <form class="row offset-2" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="User`s Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-info" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Id)</td>
                <td>@Html.DisplayNameFor(d=>d.Fname)</td>
                <td>@Html.DisplayNameFor(d=>d.Lname)</td>
                <td>@Html.DisplayNameFor(d=>d.Email)</td>
                <td>@Html.DisplayNameFor(d=>d.PhoneNumber)</td>
               <td>@Html.DisplayNameFor(d=>d.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@Html.DisplayFor(e=>User.Lname)</td>
                    <td>@Html.DisplayFor(e=>User.Email)</td>
                    <td>@Html.DisplayFor(e=>User.PhoneNumber)</td>
                    <td>@string.Join(",",User.Roles)</td>
                 

                        <partial name="_ButtonsPartialView" model="@User.Id" />

                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}



